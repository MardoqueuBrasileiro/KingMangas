<!-- upload.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Enviar Capítulo</title>
</head>
<body>
  <h1>Enviar Capítulo</h1>

  <form method="POST" action="/panel/<%= webtoon.id %>/upload" enctype="multipart/form-data">
    <div>
      <label for="chapter-number">Número do Capítulo:</label>
      <input type="number" id="chapter-number" name="chapterNumber" required>
    </div>
    <div>
      <label for="chapter-title">Título do Capítulo:</label>
      <input type="text" id="chapter-title" name="chapterTitle" required>
    </div>
    <div>
      <label for="chapter-file">Arquivo do Capítulo:</label>
      <input type="file" id="chapter-file" name="chapterFile" required>
    </div>
    <button type="submit">Enviar</button>
  </form>

  <a href="/panel">Voltar para o painel</a>
</body>
</html>
